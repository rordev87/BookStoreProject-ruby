<h1>New Book</h1>

<%= form_for :book, url: books_path, html: {class: "new_sc_form"} do |f| %>

   <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
   </p>
   
    <p>
    <%= f.label :author %><br>
    <%= f.select :author_id, options_for_select(Author.all.map{|s|[s.name, s.id]}) %>
    </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>
 
   <p>
    <%= f.label :format %><br>
    <%= f.text_field :format %>
  </p>
  
   <p>
    <%= f.label :availability %><br>
    <%= f.text_field :availability %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>