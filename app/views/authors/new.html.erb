<h1>New Author</h1>

<%= form_for :author, url: authors_path, html: {class: "new_sc_form"} do |f| %>

   <p>
    <%= f.label :surname %><br>
    <%= f.text_field :surname %>
   </p>
   
    <p>
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname %>
    </p>
 
  <p>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>